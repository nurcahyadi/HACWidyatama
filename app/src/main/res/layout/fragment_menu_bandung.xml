        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@mipmap/bandung"
            android:scaleType="fitXY"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">

                <ImageButton
                    android:id="@+id/ButtonSejarahBdg"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:src="@mipmap/sejarahbandung"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    />
                <ImageButton
                    android:id="@+id/ButtonStoreBdg"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:src="@mipmap/storebandung"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">
                <ImageButton
                    android:id="@+id/ButtonBudayaBdg"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:src="@mipmap/budayabandung"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    />
                <ImageButton
                    android:id="@+id/ButtonEventBdg"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:src="@mipmap/eventbandung"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</ScrollView>